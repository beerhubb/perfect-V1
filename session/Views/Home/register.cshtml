                </div>
            </div>
            <div class="form-group">
                <label asp-for="password" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="password" placeholder="*****" class="form-control" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="name" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="name" placeholder="สุรชัย ทองแสง" class="form-control" />
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="age" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="age" placeholder="22" class="form-control" />
                    <span asp-validation-for="age" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="address" class="col-md-4 control-label"></label>
