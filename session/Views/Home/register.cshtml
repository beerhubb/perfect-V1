@model session.Models.Register

@{
    ViewData["Title"] = "register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <h2 class="text-center"><b>สมัครสมาชิก</b></h2>

    <hr />
    <form asp-action="register" class="form-horizontal">
        <fieldset>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="username" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="username" placeholder="user1234" class="form-control input-md" />
                    <span asp-validation-for="username" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="password" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="password" placeholder="*****" class="form-control" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="name" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="name" placeholder="สุรชัย ทองแสง" class="form-control" />
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="age" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="age" placeholder="22" class="form-control" />
                    <span asp-validation-for="age" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="address" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="address" placeholder="11 บ้าน.ง้าว ต.เต่า อ.อออ่าง จ.ศรีสะเกษ" rows="5" class="form-control" />
                    <span asp-validation-for="address" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4 control-label">
                <a href="https://uppic.cc/?fbclid=IwAR0aPysKDeUBRNr8WJU11KKoGHvYNjWH7N_zG9DYtwWXSXPpnjO6HHHt2Bk" target="_blank" class="btn btn-info" role="button">ฝากรูป!!</a>
            </div>
            <div class="form-group">
                <label asp-for="pictrue" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="pictrue" placeholder="https://uppic.cc/?fbclid=IwAR0aPysKDeUBRNr8WJU11KKoGHvYNjWH7N_zG9DYtwWXSXPpnjO6HHHt2Bk" class="form-control" />
                    <span asp-validation-for="pictrue" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4 control-label">
                <a href="https://uppic.cc/?fbclid=IwAR0aPysKDeUBRNr8WJU11KKoGHvYNjWH7N_zG9DYtwWXSXPpnjO6HHHt2Bk" target="_blank" class="btn btn-info" role="button">ฝากรูป!!</a>
            </div>
            <div class="form-group">
                <label asp-for="pictrueP" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="pictrueP" placeholder="https://uppic.cc/?fbclid=IwAR0aPysKDeUBRNr8WJU11KKoGHvYNjWH7N_zG9DYtwWXSXPpnjO6HHHt2Bk" class="form-control" />
                    <span asp-validation-for="pictrueP" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-8 control-label">
                    <input type="radio" asp-for="status" id="gender" value="1"> ผู้รับงาน
                    <input type="radio" asp-for="status" id="gender" value="2"> ผู้จ้างงาน
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-8 control-label">
                    <input type="submit" value="สมัครสมาชิก" class="btn btn-success" />
                </div>
            </div>
        </fieldset>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
