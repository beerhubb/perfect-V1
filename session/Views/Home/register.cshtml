                    <input asp-for="pictrueP" placeholder="https://uppic.cc/?fbclid=IwAR0aPysKDeUBRNr8WJU11KKoGHvYNjWH7N_zG9DYtwWXSXPpnjO6HHHt2Bk" class="form-control" />
                    <span asp-validation-for="pictrueP" class="text-danger"></span>
                </div>
            </div>
            <ol>
                <li>
                    <div class="form-group">
                        <div class="col-md-8 control-label">
                            <input type="radio" asp-for="skill1" id="check11" value=""> ไม่ใช่
                            <input type="radio" asp-for="skill1" id="check1" value="1"> งานบ้าน
                        </div>
                    </div>
                </li>
                <li>
                    <div class="form-group">
                        <div class="col-md-8 control-label">
                            <input type="radio" asp-for="skill2" id="check22" value=""> ไม่ใช่
                            <input type="radio" asp-for="skill2" id="check2" value="2"> งานสวน
