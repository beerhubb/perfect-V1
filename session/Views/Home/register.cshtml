                    <input asp-for="address" placeholder="11 บ้าน.ง้าว ต.เต่า อ.อออ่าง จ.ศรีสะเกษ" rows="5" class="form-control" />
                    <span asp-validation-for="address" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="pictrue" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="pictrue" placeholder="1330822456727" class="form-control" />
                    <span asp-validation-for="pictrue" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="phon" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="phon" placeholder="0819442133" class="form-control" />
                    <span asp-validation-for="phon" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="Email" placeholder="admin1234@gmail.com" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="line" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="line" placeholder="admin_1234" class="form-control" />
                    <span asp-validation-for="line" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4 control-label">
                <a href="https://uppic.cc/?fbclid=IwAR0aPysKDeUBRNr8WJU11KKoGHvYNjWH7N_zG9DYtwWXSXPpnjO6HHHt2Bk" target="_blank" class="btn btn-info" role="button">ฝากรูป!!</a>
            </div>
            <div class="form-group">
                <label asp-for="pictrueP" class="col-md-4 control-label"></label>
