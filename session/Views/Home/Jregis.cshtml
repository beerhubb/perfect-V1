@model session.Models.Jregister

@{
    ViewData["Title"] = "Jregis";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <br />
    <h2 class="text-center"><b>สร้างงานของคุณ</b></h2>
    <hr style="border: 2px solid Gray;" />
    <form asp-action="Jregis" class="form-horizontal">
        <fieldset>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="col-md-4 control-label"><b>ประเภทงาน</b>:</label>
                <div class="col-md-4">
                    <input type="radio" asp-for="statusjob" id="check1" value="1"> งานบ้าน
                    <input type="radio" asp-for="statusjob" id="check2" value="2"> งานสวน
                    <input type="radio" asp-for="statusjob" id="check3" value="3"> งานใช้แแรง
                    <input type="radio" asp-for="statusjob" id="check4" value="4"> งานอื่นๆ
                    <span asp-validation-for="statusjob" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="jname" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="jname" class="form-control" />
                    <span asp-validation-for="jname" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="jpictrue1" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="jpictrue1" class="form-control" />
                    <span asp-validation-for="jpictrue1" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="jpictrue2" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="jpictrue2" class="form-control" />
                    <span asp-validation-for="jpictrue2" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="jpictrue3" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="jpictrue3" class="form-control" />
                    <span asp-validation-for="jpictrue3" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="jdatail" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="jdatail" class="form-control" />
                    <span asp-validation-for="jdatail" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="jaddress" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="jaddress" class="form-control" />
                    <span asp-validation-for="jaddress" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="jprice" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="jprice" class="form-control" />
                    <span asp-validation-for="jprice" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="jline" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="jline" class="form-control" />
                    <span asp-validation-for="jline" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="jphone" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="jphone" class="form-control" />
                    <span asp-validation-for="jphone" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="date" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="date" type="date" class="form-control" />
                    <span asp-validation-for="date" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-8 control-label">
                    <input type="submit" value="สร้างงาน" class="btn btn-success" />
                </div>
            </div>
        </fieldset>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
